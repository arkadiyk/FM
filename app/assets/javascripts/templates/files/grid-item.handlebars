{{#if isFile}}
<div style="position: relative">
  <img style="max-width: 220px; max-height: 165px" {{bindAttr src="thumbnailLink"}}>
  <span style="position: absolute; bottom: 5px; left: 5px; opacity: 0.6;" class="badge">{{title}}</span>
  <span style="position: absolute; top: 2px; left: 5px">

      {{address.country}}
      {{address.pref}}
      {{address.city}}

  {{input type=checkbox checked=selected}}
  </span>
</div>
{{/if}}

{{#if isDir}}
    <div style="height: 20px; margin: 70px 10px 10px 0">
      {{#each titles}}
        <span class="badge badge-info">{{this}}</span>
      {{/each}}
    </div>
    <div>
        <span style="line-height: 14px">
        <button class="btn btn-mini" style="width: 100px" {{action flipSelect this}}>
          {{!-- (very slow) #if isAllSelected}} Unselect All {{else}} Select All {{/if --}}
          {{selectLabel}}
        </button>
      </span>
      <span class="label label-inverse" style="margin: 0 3px 0 15px; padding: 3px 15px; font-weight: normal">Unprocessed in the folder: {{folder.unprocessedFiles.length}}</span>
      <span class="label label-inverse" style="margin: 0 3px 0 0; padding: 3px 15px; font-weight: normal">Selected: {{folder.selectedFiles.length}}</span>
    </div>
{{/if}}

{{#if isLastDirFiller}}
<div style="height: 20px; margin-top: 66px; margin-left: 176px;" >
  <span style="line-height: 14px">
    <span class="badge" {{action collapse this}} style="width: 25px">
    <i {{bindAttr class=":icon-2x isCollapsed:icon-chevron-left:icon-chevron-down"}}"></i>
    </span>
  </span>
</div>
{{/if}}

